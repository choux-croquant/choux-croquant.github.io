---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, updatedDate, thumbnail, migrated } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.prose {
				width: 100%;
				margin: auto;
				padding: 0.5em;
				color: rgb(var(--gray-dark));
			}
		</style>
	</head>

	<body>
		<Header />
		<main class="overflow-y-hidden mx-auto max-w-5xl">
			<article>
				<!-- <div class="hero-image">
					{thumbnail && <Image width={1020} height={510} src={thumbnail} alt="" />}
				</div> -->
				<div class="prose">
					<div class="py-6 text-center font-extrabold">
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
