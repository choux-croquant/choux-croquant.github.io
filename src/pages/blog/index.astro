---
import { getCollection } from "astro:content";
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import BlogCategoryIsland from "../../components/blog/BlogCategoryIsland.jsx";
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';

const posts = (await getCollection('blog')).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const categoriesObj: Record<string, number> = {};

posts.forEach((post) => {
  const category = post.data.category || '기타';
  categoriesObj[category] = (categoriesObj[category] || 0) + 1;
});

const categories = Object.entries(categoriesObj);
---

<html lang="en" class="h-full">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-yellow h-full font-body">
    <div class="flex flex-col h-screen">
      <Header />
      <main class="flex-1 p-4 overflow-y-hidden">
        <BlogCategoryIsland client:load categories={categories} posts={posts} />
      </main>
      <Footer />
    </div>
  </body>
</html>

