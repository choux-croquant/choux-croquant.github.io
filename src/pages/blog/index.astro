---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import BlogCategoryIsland from '../../components/blog/BlogCategoryIsland.jsx';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';

type CategoriesMap = {
  [mainCategory: string]: {
    count: number;
    subs: {
      [subCategory: string]: number;
    };
  };
};

type CategoryEntry = [string, number] | [string, number, Array<[string, number]>];

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const categoriesMap: CategoriesMap = {};

posts.forEach((post) => {
  const main = post.data.category || '기타';
  const sub = post.data.subCategory;
  if (!categoriesMap[main]) categoriesMap[main] = { count: 0, subs: {} };
  categoriesMap[main].count += 1;
  if (sub) {
    categoriesMap[main].subs[sub] = (categoriesMap[main].subs[sub] || 0) + 1;
  }
});

const categories: CategoryEntry[] = Object.entries(categoriesMap).map(([name, { count, subs }]) => {
  const subsArr = Object.entries(subs);
  return subsArr.length ? [name, count, subsArr] : [name, count];
});
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <div class="flex flex-col h-full">
      <main class="flex-1 p-4 overflow-y-hidden">
        <BlogCategoryIsland client:load categories={categories} posts={posts} />
      </main>
      <Footer />
    </div>
  </body>
</html>
